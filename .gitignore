# Ignore everything in the root except the "wp-content" directory
/*
!/wp-content/
!.gitignore

# Within "wp-content", ignore everything except your theme/plugin
/wp-content/*
!/wp-content/themes/
!/wp-content/plugins/
!/wp-content/mu-plugins/

wp-content/themes/fictional-university-theme/node_modules/
wp-content/themes/fictional-university-theme/build/*.css.map
wp-content/themes/fictional-university-theme/build/*.js.map
wp-content/themes/fictional-university-theme/css/base/*.scss
wp-content/themes/fictional-university-theme/css/base/*.css.map
wp-content/themes/fictional-university-theme/css/modules/*.scss
wp-content/themes/fictional-university-theme/css/modules/*.css.map


# Example for a plugin named "my-plugin"
wp-content/plugins/my-plugin/node_modules/
wp-content/plugins/my-plugin/vendor/
wp-content/plugins/my-plugin/*.log
wp-content/plugins/my-plugin/*.css.map
wp-content/plugins/my-plugin/*.js.map